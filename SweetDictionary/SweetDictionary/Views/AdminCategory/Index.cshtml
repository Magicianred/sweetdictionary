@using Entity.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategoriler</h2>
<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>KATEGORİ AÇIKLAMASI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>BAŞLIKLAR</th>


    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <th>@category.CategoryId</th>
            <td>@category.CategoryName</td>
            <td>@category.CategoryDescription</td>
            <td><a href="#" class="btn btn-danger">SİL</a></td>
            <td><a href="#" class="btn btn-success">GÜNCELLE</a></td>
            <td><a href="#" class="btn btn-primary">BAŞLIKLAR</a></td>

        </tr>
    }
</table>
<a href="/AdminCategory/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>
