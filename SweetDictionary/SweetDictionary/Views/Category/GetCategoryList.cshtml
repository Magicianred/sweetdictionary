@using Entity.Concrete
@model List<Category>
@{
    Layout = null;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>KATEGORİ AÇIKLAMASI</th>
        <th>KATEGORİ DURUMU</th>


    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <th>@category.CategoryId</th>
            <th>@category.CategoryName</th>
            <th>@category.CategoryDescription</th>
            <th>@category.CategoryStatus</th>

        </tr>
    }
</table>
<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>


